{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "synapse",
  "version": "0.1.0",
  "identifier": "fun.lt0.synapse",
  "build": {
    "frontendDist": "../target/dx/frontend/release/web/public",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "cd frontend && dx serve",
    "beforeBuildCommand": "cd frontend && dx build --release"
  },
  "app": {
    "windows": [
      {
        "title": "Synapse",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
