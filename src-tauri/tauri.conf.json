{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "synapse",
  "version": "0.0.1",
  "identifier": "fun.lt0.synapse",
  "build": {
    "frontendDist": "../target/dx/frontend/release/web/public",
    "devUrl": "http://127.0.0.1:8099",
    "beforeDevCommand": "cd frontend && dx serve --port 8099 --interactive=false",
    "beforeBuildCommand": "cd frontend && dx build --release"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Synapse",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "clipboard": null
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
